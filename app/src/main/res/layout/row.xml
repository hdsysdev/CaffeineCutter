<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cup"
        android:paddingRight="5dp"
        android:paddingEnd="5dp"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:id="@+id/drinkImg"
        android:layout_alignBottom="@+id/contentLabel"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/drink_name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_toEndOf="@id/drinkImg"
        android:layout_toRightOf="@id/drinkImg"
        android:id="@+id/drinkName"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/drinkName"
        android:layout_toRightOf="@id/drinkImg"
        android:layout_toEndOf="@id/drinkImg"
        android:text="@string/caffeine_content"
        android:id="@+id/contentLabel"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/contentLabel"
        android:layout_toEndOf="@id/contentLabel"
        android:text="0mg"
        android:layout_below="@id/drinkName"
        android:textStyle="bold"
        android:id="@+id/contentNum"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/time"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textSize="15sp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:id="@+id/timeTextView"/>


</RelativeLayout>